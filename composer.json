{
	"name": "phpbb/translation-validator",
	"description": "A language package validator for phpBB language packs. Language packs are required to pass the validator when submitted to the language pack database.",
	"homepage": "https://github.com/phpbb/phpbb-translation-validator",
	"version": "2.0.0-dev",
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Joas Schilling",
			"email": "nickvergessen@phpbb.com",
			"homepage": "https://www.phpbb.com/",
			"role": "Former Developer"
		},
		{
			"name": "Battye",
			"email": "battye@phpbb.com",
			"homepage": "https://www.phpbb.com",
			"role": "Developer"
		},
        {
          "name": "Christian Schnegelberger",
          "email": "crizzo@phpbb.com",
          "homepage": "https://www.phpbb.com",
          "role": "Developer"
        }
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.1",
		"symfony/yaml": "~6.3",
		"symfony/console": "~6.3",
		"symfony/finder": "~6.3",
		"battye/php-array-parser": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~10.0"
	},
	"bin": [
		"translation.php"
	],
	"config": {
		"platform": {
			"php": "8.1"
		},
		"bin-dir": "bin"
	},
	"autoload": {
		"classmap": [
			"src/",
			"tests/"
		]
	}
}
